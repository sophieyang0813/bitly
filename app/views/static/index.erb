          <div class ="half">
            <div class ="center">
                <h1>THE LINK KNOWS ALL. SO CAN YOU!</h1>
                <p>Measure your links with Bitly, the world's leading link managmeent platform.</p>
                <h2 id="sorry"></h2>

                <div class="row">
                    <div class="column1" style="width: 60%; float: left;">
                      <form action='/urls' method ='post' id="special-form"><input type="text" name="ori_url" id ="textboxid" placeholder="Paste a link to shorten it">
                        </div>
                      <div class= "column2" style="width: 20%; float: right;"><input type="submit" class="button" value="SHORTEN">
                      </div>
                    </form>
                </div>
            </div>





            <div>
              <table class="center" id="tbody">
                <tr id ="first">
                  <th> No.</th>
                  <th> Original Url</th>
                  <th> Short Url</th>
                  <th>Click Count </th>
                </tr>

                 <% Url.all.each do |u| %>
                  <tr>
                    <th><%= u.id %></th>
                    <th><%= u.ori_url %></th>
                    <th> <a href="<%= u.short_url%>"><%= "localhost:9393/" + u.short_url %></a></th>
                    <th><%= u.counter %></th>
                  </tr>
                   <% end %>
              </table>
            </div>



          </div>



